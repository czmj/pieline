<%- include layouts/header.ejs %>
<div class="col-md-12">
<ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li class="active"><%=currentlocation%></li>
</ol>
</div>

<%- include layouts/nav.ejs %>

<%- include layouts/category.ejs %>

<main class="col-xs-12 col-sm-8 col-md-8">
        <div class="list-group border-top-0 margin-top">
        <%- include layouts/sponsored.ejs %>

                <% if (!data[0]){%>
                        <p class="list-group-item">Sorry, we don't currently have any jobs in <%=currentlocation%></p>
                <% }else{
			var title
                        for(var i = 0;i < data.length;i++) {
                        title=data[i].title.replace(/[&\/\\#,+()$~%.'":*?<>{}]/g,'-');
                        company=data[i].company
                        location=data[i].location
                        title=title.replace(/\s+/g, '-');
                        location=location.replace(/\s+/g, '-');
                        company=company.replace(/\s+/g, '-');
                         %>

<a href="/jobs/<%=location%>/<%=data[i].id%>/<%=title%>-at-<%=company%>" class="list-group-item">   
                    <%=data[i].title%>
                    at <%=data[i].company%>
                </a>

			<%}}%>
	</div>
<%- include layouts/links.ejs %>
</main>

<%- include layouts/footer.ejs %>
