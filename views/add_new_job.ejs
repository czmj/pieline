<!-- element to edit 
<div name="description" id="editor" data-placeholder="Go on, start editing..."></div>-->

		<div>
                    <label for="description">Job Description: </label><textarea id="editor" class="form-control" rows=3 spellcheck="true" name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="contact_details">How to contact: </label><textarea class="form-control" rows=2 spellcheck="true" name="contact_details" required></textarea>
                </div>

                <div class="checkbox">
                    <label>
                      <input type="checkbox" name="hours" checked="checked"> Full time?
                    </label>
                    <label>
                      <input type="checkbox" name="contact_mention" checked="checked"> Mention pieline?
                    </label>
                    <label>
                      <input type="checkbox" name="contact_recruiter" > Recruiters?
                    </label>
                </div>

                <input type="submit" name="submit" value="Post live!">
                </div>

            </form>

<script>
  var editor = new wysihtml5.Editor('editor', {
    toolbar: 'toolbar',
    parserRules:  wysihtml5ParserRules
  });
</script>
        
