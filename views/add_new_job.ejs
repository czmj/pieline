<%- include layouts/header.ejs %>
            
            <form method="post" action="/admin/add">
                <div class="form-group">
                    <label for="title">Job Title: </label> <input type="text" name="title" required>
                </div>

                <div class="form-group">
                    <label for="company">Company Name: </label> <input type="text" name="company" required>
                </div>

                <div class="form-group">
                    <label for="location">Location: </label> <input type="text" name="location" required>
                </div>

                <div class="form-group">
                    <label for="category">Category: </label> <input type="text" name="category" required>
                </div>


                <div class="form-group">
                    <label for="url">Jobs page URL: </label> <input name="url" required>
                </div>

                <div class="form-group">
                    <label for="description">Job Description: </label><textarea class="form-control" rows=3 spellcheck="true" name="description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="contact_details">How to contact: </label><textarea class="form-control" rows=2 spellcheck="true" name="contact_details" required></textarea>
                </div>

                <div class="checkbox">
                    <label>
                      <input type="checkbox" name="hours" checked="1"> Full time?
                    </label>
                    <label>
                      <input type="checkbox" name="contact_mention" checked="1"> Mention pieline?
                    </label>
                    <label>
                      <input type="checkbox" name="contact_recruiter" checked="1"> Recruiters?
                    </label>
                </div>
                </div>

                <input type="submit" name="submit" value="Save">
                <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
            </form>
        
<%- include layouts/footer.ejs %>
