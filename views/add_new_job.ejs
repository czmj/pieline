            <form method="post" action="/admin/add">
                <div class="form-group">
                    <label for="title">Job Title: </label> <input type="text" name="title" required>
                </div>

                <div class="form-group">
                    <label for="company">Company Name: </label> <input type="text" name="company" required>
                </div>

                <div class="form-group">
                    <label for="location">Location: </label> <input type="text" name="location" required>
                </div>

                <div class="form-group">
                    <label for="category">Category: </label> <input type="text" name="category" required>
                </div>


                <div class="form-group">
                    <label for="url">Jobs page URL: </label> <input name="url" required>
                </div>

