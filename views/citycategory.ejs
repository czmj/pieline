<%- include layouts/header.ejs %>
<div class="col-md-12">
<ol class="breadcrumb">
        <li><a href="/">Home</a></li>
	<li><a href="/jobs/<%=currentlocation%>"><%=currentlocation%></a></li>
        <li class="active"><%=category%></li>
</ol>
</div>
<%- include layouts/nav.ejs %>
<%- include layouts/category.ejs %>
<main class="col-xs-12 col-sm-8">
	<div class="list-group list-group-top margin-top">
	<%- include layouts/sponsored.ejs %>
	<%- include layouts/filter.ejs %>
	<div class="searchable border-top-0">
                <%  if (!data[0]){%>
			<p class="list-group-item">Sorry, we don't currently have any <%=category.toLowerCase()%> jobs in <%=currentlocation%></p>
		<% }else{
                 	for(var i = 0;i < data.length;i++) { 
			var title
                        title=data[i].title.replace(/[&\/\\#,+()$~%.'":*?<>{}]/g,'-');
                        company=data[i].company
                        location=data[i].location
                        title=title.replace(/\s+/g, '-');
                        location=location.replace(/\s+/g, '-');
                        company=company.replace(/\s+/g, '-');
			 %>
<a href="/jobs/<%=location%>/<%=data[i].id%>/<%=title%>-at-<%=company%>" class="list-group-item">   
                    <%=data[i].title%>
                    at <%=data[i].company%>
                </a>
			<%}}%>
	</div>
	</div>
<%- include layouts/links.ejs %>
</main>

<%- include layouts/footer.ejs %>
