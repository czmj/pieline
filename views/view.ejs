<%- include layouts/header.ejs %>

<div class="view-job">
        <ol class="breadcrumb">
	        <li><a href="/">Home</a></li>
                <li><a href="/jobs/<%=data[0].location%>"><%=data[0].location%></a></li>
                <li><a href="/jobs/<%=data[0].location%>/<%=data[0].category%>"><%=data[0].category%></a></li>
                <li class="active"><%=data[0].title%> at <%=data[0].company%></li>
        </ol>

	<div hidden id="submit-successful" class="alert alert-success">
        	<a href="#" class="close" data-dismiss="alert">&times;</a>
        	<p>Your question was submitted successfully</p>
	</div>
	    <h1 class="job-title"><%=data[0].title%> job at <a href="<%=data[0].url%>"><%=data[0].company%></a></h1>
            <p>This is a<strong>
            <% if(data[0].hours==1){  %>                         
                 Contract
            <% }else{ %>
                Full Time
            <% } %></strong>
             position in  <strong><%=data[0].location%></strong>.</p>

            <% if(data[0].contact_recruiters==1){  %>                          
                <p class="bg-success">Recruiters <strong>may</strong> contact this poster.</p>
            <% }else{ %>
                <p class="bg-warning"><strong>Recruiters:</strong> please <strong>do not contact</strong> this poster.</p>
            <% } %>
            
            <h3>Are you who they're looking for?</h3>
            <p> <%- data[0].description%></p>
            <p><a class="btn btn-default" href="<%=data[0].url%>">Read more about the job on <%=data[0].company%>'s website</a></p>

            <hr>

	     <%- include layouts/jobquestion.ejs %>

            <hr>

    		<h3> Sound like your thing? Here's how you get in touch:</h3>
            <p> <%-data[0].contact_details%></p>
            <% if(data[0].contact_mention==1){  %>                          
                    <p class="bg-info"><strong>Do feel free to mention</strong> Pieline.net when applying</p>
                <% } %>


<%- include layouts/footer.ejs %>



