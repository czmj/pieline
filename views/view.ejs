<%- include layouts/header.ejs %>
<div class="col-md-12">
	<ol class="breadcrumb">
	        <li><a href="/">Home</a></li>
                <li><a href="/jobs/<%=data[0].location%>"><%=data[0].location%></a></li>
                <li><a href="/jobs/<%=data[0].location%>/<%=data[0].category%>"><%=data[0].category%></a></li>
                <li class="active">Job</li>
        </ol>
</div>
<main class="row">
	<div class="col-sm-12 col-md-10 col-md-offset-1">
	<div hidden id="submit-successful" class="alert alert-success">
        	<a href="#" class="close" data-dismiss="alert">&times;</a>
        	<p>Your question was submitted successfully</p>
	</div>
	<div class="col-sm-12 col-md-8 col-lg-6">
		<h1><%=data[0].title%> job at <%=data[0].company%></h1>
	</div>
	<div class="col-sm-12 col-lg-5 col-md-3 col-md-offset-1">
	<br class="visible-lg-inline-block">
	<div class="row">
        	    <div class="h4 col-lg-6 col-md-12 col-sm-6"><img class="icon" src="/img/location.svg"> <%=data[0].location%></div>
        	    <div class="h4 col-lg-6 col-md-12 col-sm-6"><img class="icon" src="/img/clock.svg">
        	    <% if(data[0].hours==1){  %>                         
        	         Part Time
        	    <% }else{ %>
        	        Full Time
        	    <% } %></div>
	</div>
	</div>
	<div class="col-sm-12 col-md-8">
		<% var qcount=0;
        	    for(var i = 0;i < data.length;i++) {
                	if(data[i].question){
				qcount+=1;%>
                	<%}
        	}
		if(qcount==1){%>
			<a href="#questions">1 question</a>
		<%}else{%>
			<a href="#questions"><%=qcount%> questions</a>
		<%}%>
	</div>
	<div class="col-sm-12 col-md-12">
        	<h2 class="h3">Job Description</h2>
            	<p> <%- data[0].description%></p>
		<a id="jobs-ext" class="btn btn-default" href="<%=data[0].url%>" onclick="piwikTracker.trackGoal(21)"><strong>See more</strong> on their website</a>
      	</div>
	<div class="col-md-12" id="questions">
	<hr>
	     <%- include layouts/jobquestion.ejs %>
	</div>
	<div class="col-sm-12 col-md-12">
	    <br><hr>
	    <h2 class="h3">Here's how you get in touch:</h2>
            <p> <%-data[0].contact_details%></p>
            <% if(data[0].contact_mention==1){  %>                          
                    <p><strong>Do feel free to mention</strong> Pieline.net when applying</p>
                <% } %>
            <% if(data[0].contact_recruiters==1){  %>                          
                <p>Recruiters <strong>may</strong> contact this poster.</p>
            <% }else{ %>
                <p><strong>Recruiters:</strong> please <strong>do not contact</strong> this poster.</p>
            <% } %>
	<br>
	</div>
	</div>
</main>
<%- include layouts/footer.ejs %>
